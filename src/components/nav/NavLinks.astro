---
const { class: className } = Astro.props;
const { pathname } = Astro.url;

const paths = [
  { path: "/", label: "Home" },
  { path: "/photos", label: "Photos" },
];

const isActive = (path: string) => pathname === path;
---

<nav class:list={[className, "flex items-center gap-4"]}>
  {
    paths.map(({ path, label }) => (
      <a
        href={path}
        aria-current={isActive(path) ? "page" : "false"}
        class:list={[
          "hover:text-primary uppercase-tight relative transition-all duration-200 ease-out",
          isActive(path) ? "text-primary" : "text-secondary",
        ]}
      >
        {label}

        {/* striketrhough effect */}
        <span
          class:list={[
            "bg-content-primary absolute inset-x-0 top-[48%] block h-0.5 transition-all duration-200",
            isActive(path) ? "max-w-full" : "max-w-0",
          ]}
        />
      </a>
    ))
  }
</nav>
